{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "commonjs": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0,
    "import/prefer-default-export": 0,
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|val|next" }],
    "prefer-destructuring": [
      "error",
      {
        "array": true,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ]
    // "prettier/prettier": "error"
  },
  "plugins": ["prettier"]
}
